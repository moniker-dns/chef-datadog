init_config:

instances:
  - server: <%= node['datadog']['mysql']['server'] %>
<% if node['datadog']['mysql'].defined?('user') -%>
    user: <%= node['datadog']['mysql']['user'] %>
<% end -%>
<% if node['datadog']['mysql'].defined?('password') -%>
    pass: <%= node['datadog']['mysql']['password'] %>
<% end -%>
<% if node['datadog']['mysql'].defined?('tags') -%>
    tags:
  <% node['datadog']['mysql']['tags'].each do |t| -%>
    - <%= t %>
  <% end -%>
<% end -%>
<% if node['datadog']['mysql'].defined?('options') -%>
    options:
  <% node['datadog']['mysql']['options'].each do |opt,val| -%>
     <%= opt %>: <%= val %>
  <% end -%>
<% end -%>
